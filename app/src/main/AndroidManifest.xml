<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- I've added the INTERNET permission, as My app will likely need it to fetch movie data. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp"
        tools:targetApi="31">

        <!-- SplashActivity is the entry point of the app. It's the first screen shown. -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- other activities are declared here. -->
        <!-- 'exported' is false because they are launched from within your app, not by other apps. -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".detailedviewscreen"
            android:exported="false" />
        <activity
            android:name=".Addmovieactivity"
            android:exported="false" />

    </application>

</manifest>
